name:                concurrent-phasers
version:             0.1.0
synopsis:            'Phasers' for parallel computation
-- description:         
license:             MIT
license-file:        LICENSE
author:              Andrew Brooks
maintainer:          andrewgrantbrooks@gmail.com
-- copyright:           
category:            Concurrency
build-type:          Simple
extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Control.Concurrent.Phaser
  --other-modules:       Control.Concurrent.Phaser.Internal
  --other-extensions:    
  build-depends:       base >= 4.9 && < 5.0
                     , stm  >= 2.4 && < 3.0
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite phaser-test
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Spec.hs
  build-depends:    concurrent-phasers
                  , base
                  , hspec
                  , time
                  , QuickCheck
  ghc-options: -O0 -threaded -rtsopts -with-rtsopts=-N
  default-language: Haskell2010

source-repository head
  type: git
  location: https://github.com/agbrooks/concurrent-phasers